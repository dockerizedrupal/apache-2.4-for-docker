<IfModule mod_fastcgi.c>
  AddHandler php .php

  Alias /php /httpd/php
  FastCgiExternalServer /httpd/php -host <%= @php_host %> -idle-timeout 300 -pass-header Authorization

  <Location /php>
    Order deny,allow
    Deny from all
    Allow from env=REDIRECT_STATUS
  </Location>

  Action php /php
</IfModule>
