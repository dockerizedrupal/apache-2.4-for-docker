<IfModule mod_fastcgi.c>
  AddHandler php .php

  Alias /php54 /httpd/php54
  FastCgiExternalServer /httpd/php54 -host <%= @php54_port_9000_tcp %> -idle-timeout 300 -pass-header Authorization

  <Location /php54>
    Order deny,allow
    Deny from all
    Allow from env=REDIRECT_STATUS
  </Location>

  Action php /php54
</IfModule>
