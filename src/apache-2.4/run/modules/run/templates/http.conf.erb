<VirtualHost *:80>
  DocumentRoot <%= @document_root %>

  <Directory "<%= @document_root %>">
<% if @indexes == "On" -%>
    Options +Indexes
<% else -%>
    Options -Indexes
<% end -%>
    AllowOverride All
<% if @http_basic_auth == "On" -%>
    AuthType Basic
    AuthName "Authentication Required"
    AuthUserFile "/etc/htpasswd/.htpasswd"
    Require valid-user
<% else -%>
    Require all granted
<% end -%>
  </Directory>
</VirtualHost>
