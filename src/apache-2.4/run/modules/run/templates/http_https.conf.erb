<VirtualHost *:80>
  DocumentRoot <%= @document_root %>

<% if @no_gzip == "On" -%>
  SetEnv no-gzip 1
<% else -%>
  SetEnv no-gzip 0
<% end -%>

  <Directory "<%= @document_root %>">
<% if @indexes == "On" -%>
    Options +Indexes
<% else -%>
    Options -Indexes
<% end -%>
    AllowOverride All
<% if @http_basic_auth == "On" -%>
    AuthType Basic
    AuthName "Authentication Required"
    AuthUserFile "/etc/htpasswd/.htpasswd"
    Require valid-user
<% else -%>
    Require all granted
<% end -%>
  </Directory>

  SSLProxyEngine on
  ProxyRequests Off

  <Proxy *>
    Order deny,allow
    Allow from all
  </Proxy>

  ProxyPass <%= @proxy_1_pass %>
  ProxyPassReverse <%= @proxy_1_pass_reverse %>
  ProxyPass <%= @proxy_2_pass %>
  ProxyPassReverse <%= @proxy_2_pass_reverse %>
</VirtualHost>
